{
    "name": "ts-postgres",
    "version": "1.0.0-rc1",
    "description": "PostgreSQL client in TypeScript",
    "declaration": true,
    "keywords": [
        "database",
        "postgres",
        "postgresql",
        "rdbms"
    ],
    "homepage": "https://github.com/malthe/ts-postgres",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "author": "Malthe Borch <mborch@gmail.com>",
    "dependencies": {
        "ts-typed-events": "^1.1.1"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/malthe/ts-postgres.git"
    },
    "license": "MIT",
    "engines": {
        "node": ">=10.7.0"
    },
    "minNativeVersion": "2.3.0",
    "scripts": {
        "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "test": "jest --verbose",
        "test:watch": "jest --watch",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 85,
                "lines": 85,
                "statements": 85
            }
        },
        "collectCoverage": true
    },
    "prettier": {
        "semi": true,
        "singleQuote": true
    },
    "devDependencies": {
        "@types/jest": "^22.0.0",
        "@types/node": "^10.11.0",
        "colors": "^1.1.2",
        "jest": "^22.0.2",
        "lint-staged": "^7.1.3",
        "prettier": "^1.13.4",
        "prompt": "^1.0.0",
        "rimraf": "^2.6.1",
        "ts-jest": "^23.10.2",
        "ts-node": "^6.0.0",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.1.0",
        "tslint-config-standard": "^7.0.0",
        "typescript": "^3.1.1"
    }
}
